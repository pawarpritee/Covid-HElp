<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Auth.geofind">
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrl1"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:textSize="30sp"
            android:id="@+id/txt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
    </ScrollView>


        <TextView

            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Coordinates: "
            android:textSize="30sp"
            android:id="@+id/textView"
            android:visibility="gone"
            android:layout_below="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Lcation"
        android:layout_below="@+id/scrl1"
        android:id="@+id/button"
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <ProgressBar
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/isit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress"
        android:layout_marginTop="100dp"
        android:text="@string/is_it_your_address"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/yesbtn"
        android:layout_marginTop="20dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/yes_it_is"
        android:layout_below="@+id/isit"/>

    <EditText
        android:id="@+id/shopnm"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@+id/textView3"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/textView3"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yesbtn"
        android:layout_marginTop="100dp"
        android:text="Enter your ShopName"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"/>

</RelativeLayout>
